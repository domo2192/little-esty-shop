<%= form_with model: model, url: path, method: method do |f| %>
  <%= f.label "Item Name" %>
  <%= f.text_field "name" %>
  <%= f.label "Item Description" %>
  <%= f.text_field "description" %>
  <%= f.label "Unit Price" %>
  <%= f.text_field "unit_price" %>

  <%= f.submit button_text %>
<% end %>
